	<taskdef resource="net/sf/antcontrib/antlib.xml"/>
	
	<target name="run" description="List Log4j applications and request create directory and log4j.properties file">
		<loadfile property="serviceList" srcfile="log4jservices.txt"/>
		<foreach list="${serviceList}" target="createLog4jProperties" param="var" delimiter="${line.separator}"/>
	</target>
	
	<target name="createLog4jProperties" description="Create log4j property file for a specific service">
		<!--loadproperties srcfile="local.properties"/-->
		<var name="index" value="1"/>
		<for list="${var}" param="service-info" delimiter="|">
  			<sequential>
  			    <property name="i${index}" value="@{service-info}" />
  			    <math result="index" operand1="${index}" operation="+" operand2="1" datatype="int" />
    			<!--echo>Param @{service-info}</echo-->
			</sequential>
		</for>
		<echo>${i1}</echo>
		<echo>${i2}</echo>
		<echo>${i3}</echo>
		<echo>${i4}</echo>
		<echo>${i5}</echo>
		<echo>${i6}</echo>
		<echo>${i7}</echo>
		<echo>${i8}</echo>
		<echo>${i9}</echo>
		<echo>${i10}</echo>
		<echo>${i11}</echo>
		<echo>${i12}</echo>
		<if>
			<isgreaterthan arg1="${i12}" arg2="0"/>
			<then>
				<echo>${i12}</echo>
			</then>
			<else>
				<echo>5</echo>
			</else>
		</if>
	</target>
